# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET        /                                       controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)

#clarify id's type
GET        /history/headers/:modifierId            controllers.HistoryController.getHeader(modifierId: String)

GET        /history/headersAt/:height              controllers.HistoryController.getHeaderAtHeight(height: Int)

GET        /history/bestHeaderAt/:height           controllers.HistoryController.getBestHeaderAtHeight(height: Int)
#cast to int
GET        /history/lastHeaders/:qty               controllers.HistoryController.getLastHeaders(qty: Int)

GET        /history/headers/range/:from/:to        controllers.HistoryController.getHeadersByHeightRange(from: Int, to: Int)
