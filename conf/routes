# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#clarify id's type
GET     /history/headers/:modifierId        controllers.HistoryController.getHeader(modifierId: String)

#GET     /history/headersAt/:height          controllers.HistoryController.getHeadersAtHeightR(height: String)

#GET     /history/bestHeaderAt/:height      controllers.HistoryController.getBestHeaderAtHeightR(height: String)

#GET     /history/lastHeaders/:qty   controllers.HistoryController.getLastHeadersR(qty: String)

#GET     /history/headers/range/:from/:to

GET     /transactions/output/:modifierId        controllers.TransactionsController.findOutput(modifierId: String)
GET     /transactions/:address/outputs          controllers.TransactionsController.listOutputsByAddress(address: String)
GET     /transactions/:address/outputs/unspent  controllers.TransactionsController.listUnspentOutputsByAddress(address: String)
GET     /transactions/input/:modifierId         controllers.TransactionsController.findInput(modifierId: String)
GET     /transactions/tx/:id/inputs             controllers.TransactionsController.listInputsByTxId(id: String)
GET     /transactions/:id                       controllers.TransactionsController.findTransaction(id: String)
